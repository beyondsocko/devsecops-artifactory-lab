# =============================================================================
# DevSecOps Policy Gate Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# =============================================================================

# =============================================================================
# NEXUS REPOSITORY CONFIGURATION
# =============================================================================
NEXUS_URL=http://localhost:8081
NEXUS_USERNAME=admin
NEXUS_PASSWORD=DevSecOps2024!
NEXUS_DOCKER_REGISTRY=localhost:8082

# =============================================================================
# SECURITY GATE POLICY CONFIGURATION
# =============================================================================

# Severity-based gate controls (true/false)
GATE_FAIL_ON_CRITICAL=true
GATE_FAIL_ON_HIGH=true
GATE_FAIL_ON_MEDIUM=false
GATE_FAIL_ON_LOW=false

# Threshold limits (maximum allowed vulnerabilities)
GATE_MAX_CRITICAL=0
GATE_MAX_HIGH=5
GATE_MAX_MEDIUM=20
GATE_MAX_LOW=50

# =============================================================================
# BYPASS MECHANISM CONFIGURATION
# =============================================================================

# Enable/disable bypass functionality
GATE_BYPASS_ENABLED=true

# Bypass token for emergency overrides (set via CI/CD secrets in production)
GATE_BYPASS_TOKEN=""

# Default bypass reason (can be overridden at runtime)
GATE_BYPASS_REASON=""

# =============================================================================
# SCANNER CONFIGURATION
# =============================================================================

# Primary scanner (trivy|grype)
PRIMARY_SCANNER=trivy

# Scanner timeout in seconds
SCANNER_TIMEOUT=300

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================

# Report output formats (markdown|html|json)
REPORT_FORMATS=markdown,json

# Report retention days
REPORT_RETENTION_DAYS=30

# =============================================================================
# AUDIT CONFIGURATION
# =============================================================================

# Audit log retention days
AUDIT_RETENTION_DAYS=90

# Audit log level (DEBUG|INFO|WARN|ERROR)
AUDIT_LOG_LEVEL=INFO

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=""

# Email notifications (optional)
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_SMTP_SERVER=""
EMAIL_FROM=""
EMAIL_TO=""

# =============================================================================
# ADVANCED POLICY CONFIGURATION
# =============================================================================

# Custom policy rules (JSON format)
CUSTOM_POLICY_RULES=""

# Whitelist CVEs (comma-separated)
WHITELISTED_CVES=""

# Blacklist packages (comma-separated)
BLACKLISTED_PACKAGES=""

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================

# Skip gate in development (true/false)
DEV_SKIP_GATE=false

# Test mode (generates reports but doesn't fail)
TEST_MODE=false

# Verbose logging
VERBOSE=false